<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane fx:id="root" minHeight="350.0" minWidth="450.0" prefHeight="350.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <GridPane fx:id="board" alignment="CENTER" style="-fx-background-image: url('background.png');
                                                          -fx-background-size: 276 284;
                                                          -fx-background-position: center center;
                                                          -fx-background-repeat: stretch;">
        </GridPane>
    </center>

    <right>
        <VBox fx:id="menu" alignment="CENTER" minWidth="100.0" spacing="10.0">
            <Button fx:id="print" minWidth="60.0" text="Print" />
            <Button fx:id="solve" minWidth="60.0" text="Solve" />
            <Button fx:id="reset" minWidth="60.0" text="Reset" />
            <Button fx:id="save" minWidth="60.0" text="Save" />
            <Button fx:id="open" minWidth="60.0" text="Open" />
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-border-color: lightgray; -fx-border-style: solid none none none;">
            <Label fx:id="status" />

            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </HBox>
    </bottom>


</BorderPane>
